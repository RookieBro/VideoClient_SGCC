<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CenterImageView">
        <attr name="imgId" format="reference" />
        <attr name="isTop" format="boolean" />
    </declare-styleable>

    <!-- 带有角标的 textview -->
    <declare-styleable name="badge_view">
        <attr name="badge_text" format="string" />
        <attr name="badge_num" format="integer" />
    </declare-styleable>

    <!-- 可旋转的 TextView -->
    <declare-styleable name="RotateTextView">
        <attr name="degree" format="integer" />
        <attr name="translate" format="dimension" />
    </declare-styleable>

</resources>